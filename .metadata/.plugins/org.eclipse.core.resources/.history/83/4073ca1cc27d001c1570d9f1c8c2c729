

public class TestMethods 
{
	public static double sphereVolume(double r)
	{
		//V = 4/3pir^3
		return ((4.0/3)*Math.PI*Math.pow(r, 3));
	}
	
	public static double sphereSurface(double r)
	{
		//A = 4 pi r2
		return (4.0*Math.PI*Math.pow(r, 2));
		
	}
	
	public static double cylinderVolume(double r, double h)
	{
		// V =  pi r2 h
		return (Math.PI*Math.pow(r, 2)*h);
	}
	
	public static double cylinderSurface(double r, double h)
	{
		//A = 2 pi r h + 2 pi r2
		return (2*Math.PI*r*h + 2*Math.PI*Math.pow(r, 2));
	}
	
	public static double coneVolume(double r, double h)
	{
		//V = pi r2 h/3
		return (Math.PI*Math.pow(r, 2)*(h/3));
	}
	
	public static double coneSurface(double r, double h)
	{
		//A = pi r (r + sqrt h2+r2)
		return (Math.PI*r*(r+(Math.sqrt(Math.pow(h, 2) + Math.pow(r, 2)))));
	}

	import java.util.Scanner;
	public static void main(String[] args)
	{
		Scanner in = new Scanner(System.in);
	
		System.out.println("Please enter radius (r) and height (h): ");
		int r = in.nextInt();
		int h = in.nextInt();
		
		System.out.println("Spehere volume of " + r + " is = " + sphereVolume(r));
		System.out.println("Sphere surface of " + r + " is = " + sphereSurface(r));
		System.out.println("Cylinder volume of " + r + " and " + h + " is = " + cylinderVolume(r, h));
		System.out.println("Cylinder surface of " + r + " and " + h + " is = " + cylinderSurface(r, h));
		System.out.println("Cone volume of " + r + " and " + h + " is = " + coneVolume(r, h));
		System.out.println("Cone surface of " + r + " and " + h + " is = " + coneSurface(r, h));
		
		in.close();
	}
}
