public class TestMethods 
{
	public static double sphereVolume(double r)
	{
		//creating method to calculate sphere volume
		//V = 4/3pir^3
		return ((4.0/3)*Math.PI*Math.pow(r, 3));
	}
	
	public static double sphereSurface(double r)
	{
		//A = 4 pi r2
		//creating method to calculate sphere surface
		return (4.0*Math.PI*Math.pow(r, 2));
		
	}
	
	public static double cylinderVolume(double r, double h)
	{
		// V =  pi r2 h
		//creating method to calculate cylinder volume
		return (Math.PI*Math.pow(r, 2)*h);
	}
	
	public static double cylinderSurface(double r, double h)
	{
		//A = 2 pi r h + 2 pi r2
		//creating method to calculate cylinder surface
		return ((2*Math.PI*r*h) + (2*Math.PI*Math.pow(r, 2)));
	}
	
	public static double coneVolume(double r, double h)
	{
		//V = pi r2 h/3
		//creating method to cone volume
		return (Math.PI*Math.pow(r, 2)*(h/3));
	}
	
	public static double coneSurface(double r, double h, double l)
	{
		//A = pi r (r + sqrt h2+r2)
		////creating method to calculate cone surface
		return (Math.PI*r*(r+(Math.sqrt(Math.pow(h, 2) + Math.pow(r, 2)))));
	}
	
}
